<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeTravel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeTravel.Paginas"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="mcdonalds.png">
            <ShellContent ContentTemplate="{DataTemplate local:MenuPrincipal}" Route="MenuPrincipal" />
        </Tab>
        <Tab Title="Pedidos" Icon="papas_fritas.png">
            <ShellContent ContentTemplate="{DataTemplate local:Pedidos}" Route="Pedidos" />
        </Tab>
        <Tab Title="Cupones" Icon="cupon.png">
            <ShellContent ContentTemplate="{DataTemplate local:Cupones}" Route="Cupones" />
        </Tab>
        <Tab Title="Personaliza" Icon="feliz.png">
            <ShellContent ContentTemplate="{DataTemplate local:Personaliza}" Route="Personaliza" />
        </Tab>
        <Tab Title="Mi Cuenta" Icon="usuario.png">
            <ShellContent ContentTemplate="{DataTemplate local:Perfil}" Route="Perfil" />
        </Tab>
    </TabBar>
</Shell>
